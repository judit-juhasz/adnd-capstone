<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_status_image"
        android:layout_width="@dimen/message_item_size_image"
        android:layout_height="@dimen/message_item_size_image"
        android:layout_marginLeft="@dimen/margin_normal_left_right"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum_tiny"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_toRightOf="@id/iv_status_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal_left_right"
        android:layout_marginRight="@dimen/margin_normal_left_right"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum_short"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_toRightOf="@id/iv_status_image"
        android:layout_below="@id/tv_date"
        android:layout_marginLeft="@dimen/margin_normal_left_right"
        android:layout_marginRight="@dimen/margin_normal_left_right"/>

</RelativeLayout>