<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_elem_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:showDividers="none">

    <TextView
        android:id="@+id/widget_list_elem_message_summary"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_four"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginEnd="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/widget_list_elem_message_date"
        android:layout_width="@dimen/zero_width"
        android:layout_height="match_parent"
        android:layout_weight="@integer/weight_one"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"/>

</LinearLayout>