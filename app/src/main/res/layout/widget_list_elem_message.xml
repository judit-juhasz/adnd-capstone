<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_elem_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="none">

    <TextView
        android:id="@+id/widget_list_elem_message_summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/widget_margin"
        android:layout_toStartOf="@id/widget_list_elem_message_date"
        android:contentDescription="@string/content_description_tv_summary"
        android:ellipsize="end"
        android:maxLines="@integer/maxlines_widget_summary"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/widget_list_elem_message_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/content_description_tv_date"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorWidgetDate"
        android:textStyle="bold" />

</RelativeLayout>