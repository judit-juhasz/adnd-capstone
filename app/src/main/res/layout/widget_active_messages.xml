<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_active_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWidgetBackground">

    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWidgetTitleBackground">

        <TextView
            android:id="@+id/widget_active_messages_title"
            android:layout_width="@dimen/zero_width"
            android:layout_height="match_parent"
            android:layout_weight="@integer/weight_three"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center_vertical"
            android:text="@string/widget_title"
            android:textColor="@color/colorPrimaryDark"
            android:paddingStart="@dimen/widget_padding"
            android:contentDescription="@string/widget_title"/>

        <ImageView
            android:id="@+id/widget_active_messages_logo"
            android:layout_width="@dimen/zero_width"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight_one"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logo"
            android:contentDescription="@string/content_description_logo"/>

    </LinearLayout>

    <ListView
        android:id="@+id/widget_active_messages_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryText"
        android:layout_alignParentStart="true"
        android:divider="@null"
        android:dividerHeight="@dimen/zero_height"
        android:layout_below="@id/widget_header"
        android:layout_marginTop="@dimen/widget_padding"
        tools:listitem="@layout/widget_list_elem_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:paddingStart="@dimen/widget_padding"
        android:paddingEnd="@dimen/widget_padding"
        android:contentDescription="content_description_widget_list"/>

    <TextView
        android:id="@+id/widget_active_messages_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorSecondaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@id/widget_header"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:contentDescription="@string/content_description_tv_notification"/>

</RelativeLayout>